<!DOCTYPE html>
<html>
<!-- COMIENZO DEL HEAD -->

<%- include ("../partials/head") -%>

<!-- COMIENZO BODY -->
<body>
        <div class ="logowhatsapp">
            <img src="/img/whatsapp-logo.svg"  alt="Whatsapp" class ="logosredes"/>
        </div>

<%- include ("../partials/header") -%>

        <main>

            <a href = "/productos/create"><button class = "boton">Agregar Producto</button></a>

        <section>
            <div class="listadoproductos">      
                <% productos.forEach(function (product) { %>
               <div class="masVendidosFlex"> 
                    <a href = "/productos/<%=product.id%>">
                    <img class="imagenMV" src="/img/products/<%=product.image%>">
                    <ul class="Lista">
                        <div class="Marca"><%=product.nombre%> <%=product.tono%></div>
                        
                        <div class="descuento"><%=product.oferta%></div>
                        <div class="camion"><div i class="fas fa-truck"></i></div></div>
                    </ul>
                    </a>
                </div> 
                <% }) %> 
            </div>
        </section>
    </main>    

    <!-- COMIENZO FOOTER -->

    <%- include ("../partials/footer") -%>

    </body>
</html>